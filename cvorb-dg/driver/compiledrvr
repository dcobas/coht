# Compile for Linux
if [[ "$1" == "linux" ]]; then
#make -f makefiles/drvr-linux.mk clean
    echo -e "\nCompiling driver for $2 Linux kernel:\n"
    make -f makefiles/drvr-linux.mk KVER=$2
fi

# Compile for Lynx
if [[ "$1" == "lynx" ]]; then
#make -f makefiles/drvr-lynx.mk clean
    echo -e "\nCompiling driver for $2 Lynx kernel:\n"
    make -f makefiles/drvr-lynx.mk KVER=$2
fi